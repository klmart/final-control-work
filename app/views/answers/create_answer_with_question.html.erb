<%= form_for [@question, @answer], html: {class: 'form-horizontal'}  do |f| %>

    <div class="form-group">
      <%= f.label :content, value: 'Ответ', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_area :content, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @answer, field_name: :content %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :answer_status, value: 'Ответ правильный?', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.check_box :answer_status%>
        <%= render 'shared/field_errors', object: @answer, field_name: :answer_status %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-3 col-sm-offset-3 col-xs-offset-3 col-md-6 col-sm-6 col-xs-12">
        <%= f.submit 'Сохранить', class: 'btn btn-success' %>
      </div>
    </div>

<% end %>

