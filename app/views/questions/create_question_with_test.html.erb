  <%= form_for [@test, @question] do |f| %>

          <div class="form-group">
            <%= f.label :content, value: 'Описание', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= f.text_area :content, class: 'form-control' %>
              <%= render 'shared/field_errors', object: @question, field_name: :question %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-offset-3 col-sm-offset-3 col-xs-offset-3 col-md-6 col-sm-6 col-xs-12">
              <%= f.submit 'Сохранить', class: 'btn btn-success' %>
            </div>
          </div>

      <% end %>

