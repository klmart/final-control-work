<h2>Ответы для теста "<%= @question.content%>"</h2>
<p class="mg-bottom-20">
  <%= link_to 'Добавить ответ', create_answer_with_question_path(@question),  class: 'btn btn-success' %>
</p>
<table class="table table-hover">
  <thead>
  <tr>
    <th class="col-md-3 col-sm-3">Answer</th>
    <th class="col-md-3 col-sm-3">Is correct</th>
    <th class="col-md-3 col-sm-3">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.content  %></td>
        <td><%= answer.answer_status %></td>
        <td>
          <%= link_to 'Edit'.html_safe,
                      edit_answer_path(answer),
                      class: 'btn btn-default btn-xs',
                      id: "answer_#{answer.id}_edit" %>
          <%= link_to 'Remove'.html_safe,
                      answer_path(answer),
                      method: :delete,
                      data: {confirm: 'Вы действительно хотите удалить вопрос?'},
                      class: 'btn btn-danger btn-xs',
                      id: "answer_#{answer.id}_delete" %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
