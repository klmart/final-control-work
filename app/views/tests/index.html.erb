<% provide :page_title, 'Учетные записи' %>

<p class="mg-bottom-20">
  <%= link_to 'Добавить тест', new_test_path, class: 'btn btn-success' %>
</p>
<table class="table table-hover">
  <thead>
  <tr>
    <th class="col-md-3 col-sm-3">Name</th>
    <th class="col-md-3 col-sm-3">link</th>
    <th class="col-md-3 col-sm-3">Questions</th>
    <th class="col-md-3 col-sm-3">Results</th>
    <th class="col-md-3 col-sm-3">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @tests.each do |test| %>
      <tr>
        <td><%= link_to test.name, test_path(test) %></td>
        <td><%= test.link %></td>
        <td><%= '20' %></td>
        <td><%= 'res' %></td>
        <td>
          <%= link_to 'Edit'.html_safe,
                      edit_test_path(test),
                      class: 'btn btn-default btn-xs',
                      id: "test_#{test.id}_edit" %>
          <%= link_to 'Remove'.html_safe,
                      test_path(test),
                      method: :delete,
                      data: {confirm: 'Вы действительно хотите удалить тест?'},
                      class: 'btn btn-danger btn-xs',
                      id: "test_#{test.id}_delete" %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
