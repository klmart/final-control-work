<%= form_for @test, html: {class: 'form-horizontal'} do |f| %>

    <div class="form-group">
      <%= f.label :name, value: 'Название *', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @test, field_name: :test %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, value: 'Описание*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :description, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @test, field_name: :description %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-3 col-sm-offset-3 col-xs-offset-3 col-md-6 col-sm-6 col-xs-12">
        <%= f.submit 'Сохранить', class: 'btn btn-success' %>
      </div>
    </div>

<% end %>